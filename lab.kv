<Lab3Screen>:
    orientation: "vertical"
    Label:
        text: "Генерация паролей и количественная оценка стойкости парольной защиты"
        size_hint: [1, 0.2]
        font_size: 20
    BoxLayout:
        orientation: "horizontal"
        AnchorLayout:
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    Label:
                        text: "P(Вероятность)"
                        font_size: 16
                        halign: "left"
                        valign: "center"
                        text_size: self.size
                    AnchorLayout:
                        anchor_x: "left"
                        FloatInput:
                            size_hint: [0.6, 0.7]
                            id: P_textbox
                            multiline: False
                            text: "0.0000001"
                            on_text: root.update_values()
                BoxLayout:
                    Label:
                        text: "V(Скорость перебора) [паролей/день]"
                        font_size: 16
                        halign: "left"
                        valign: "center"
                        text_size: self.size
                    AnchorLayout:
                        anchor_x: "left"
                        IntInput:
                            size_hint: [0.6, 0.7]
                            id: V_textbox
                            multiline: False
                            text: "100"
                            on_text: root.update_values()
                BoxLayout:
                    Label:
                        text: "T(Срок действия пароля) [дней]"
                        font_size: 16
                        halign: "left"
                        valign: "center"
                        text_size: self.size
                    AnchorLayout:
                        anchor_x: "left"
                        IntInput:
                            size_hint: [0.6, 0.7]
                            id: T_textbox
                            multiline: False
                            text: "10"
                            on_text: root.update_values()
                BoxLayout:
                    Label:
                        text: "S*(Нижняя граница паролей)"
                        font_size: 16
                        halign: "left"
                        valign: "center"
                        text_size: self.size
                    AnchorLayout:
                        anchor_x: "left"
                        TextInput:
                            size_hint: [0.6, 0.7]
                            id: S_textbox
                            multiline: False
                            readonly: True
                            text: "10000000000"
                BoxLayout:
                    Label:
                        text: "A(Мощность алфавита)"
                        font_size: 16
                        halign: "left"
                        valign: "center"
                        text_size: self.size
                    AnchorLayout:
                        anchor_x: "left"
                        TextInput:
                            size_hint: [0.6, 0.7]
                            id: A_textbox
                            multiline: False
                            readonly: True
                            text: "0"
                BoxLayout:
                    Label:
                        text: "L(Длина пароля)"
                        font_size: 16
                        halign: "left"
                        valign: "center"
                        text_size: self.size
                    AnchorLayout:
                        anchor_x: "left"
                        TextInput:
                            size_hint: [0.6, 0.7]
                            id: L_textbox
                            multiline: False
                            readonly: True
                            text: "inf"

        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                Label:
                    text: "Латинские большие"
                    font_size: 16
                    halign: "right"
                    valign: "center"
                    text_size: self.size
                AnchorLayout:
                    anchor_x: "left"
                    CheckBox:
                        id: eng_alpha_upper
